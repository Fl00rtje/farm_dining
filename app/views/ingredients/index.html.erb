  <div class="row filter">
      <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10" >
        <%= simple_form_for @order do |o| %>
        <%= o.input :order_quantity, label: false, input_html: { text: "TO DO: Add filter code" } %>
        <% end %>
      </div>

        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2" >

            <button class="btn btn-filter-submit" type="submit">Filter</button>

    </div>
  </div>

        <% @ingredients.each do |ingredient| %>
        <h3>  <%= ingredient.name %></h3>
        <%= ingredient.description %>
        <%= ingredient.photo %>

        <p>Price: <%= humanized_money_with_symbol(ingredient.price) %>
          <%= ingredient.price_type %></p>

          <%= ingredient.price %><br />
          <%= ingredient.rating %><br />

          <%= ingredient.main_category %>
          <%= ingredient.category %><br />
          <%= ingredient.available_quantity %><br />
          <br />
          <%= ingredient.farm.farm_name %><br />
          <p> SKU: <%= ingredient.sku %></p>

          <p>$$$</p>

          <%= link_to "Link", ingredient_path(ingredient) %>

          <%= simple_form_for @order do |order| %>
          <%= order.input :order_quantity %>
          <%= order.input :ingredient_id, :as => :hidden, :input_html => { :value => ingredient.id }  %>
          <%= order.input :price_paid, :as => :hidden, :input_html => { :value => ingredient.price  }  %>
          <%= order.submit "add to basket", class: "btn btn-primary" %>
          <% end %>

          <hr>
          <% end %>

          <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          ></div>
        </div>
