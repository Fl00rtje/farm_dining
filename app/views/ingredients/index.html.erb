<h1>Welcome to ingredients index</h1>


 <% @ingredients.each do |ingredient| %>
      <h3>  <%= ingredient.name %></h3>
      <%= ingredient.description %>
      <%= ingredient.photo %>
      <p>Price: <%= humanized_money_with_symbol(ingredient.price) %>
        <%= ingredient.price_type %></p>
      <%= ingredient.main_category %>
      <%= ingredient.category %><br />
      <%= ingredient.available_quantity %><br />
     <br />
      <%= ingredient.farm.farm_name %><br />
       <p> SKU: <%= ingredient.sku %></p>

      <p>$$$</p>

      <%= link_to "Link", ingredient_path(ingredient) %>


    <hr>
<% end %>









