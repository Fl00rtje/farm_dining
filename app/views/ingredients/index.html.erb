        <% @ingredients.each do |ingredient| %>
          <div class="col-xs-6 col-sm- col-lg-3" >
            <div class="card-text">
              <%= link_to '#' do %>
                <%#= cl_image_path ingredient.photo %>
                <%#= link_to "", ingredient_path(ingredient), class: "card-link" %>

              <%# end %>


            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%=cl_image_path ingredient.photo%>');">

              <div class="lettering">
                <h2><%= ingredient.name %></h2>
              </div>



                <%= link_to "", ingredient_path(ingredient), class: "card-link" %>
            </div>
<div class="card-show-text">
               <%# @ingredients.each do |ingredient| %>
        <p>Price: <%= humanized_money_with_symbol(ingredient.price) %>
          <%= ingredient.price_type %></p>
          <p><%= ingredient.available_quantity %></p>
          <%= ingredient.farm.farm_name %><br />
          <%= simple_form_for @order do |order| %>
          <%= order.input :order_quantity, collection: (1..[ingredient.available_quantity, 100].min)%>
          <%= order.input :ingredient_id, :as => :hidden, :input_html => { :value => ingredient.id }  %>
          <%= order.input :price_paid, :as => :hidden, :input_html => { :value => ingredient.price  }  %>
          <%= order.submit "add to basket", class: "btn btn-primary" %>
          <% end %>
          <% end %>

</div>

