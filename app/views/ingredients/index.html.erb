<h1>Welcome to ingredients index</h1>

<div class="container">

  <div class="row">
    <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("Fruits_and_veg.jpg", :alt => "Picture of fruits and vegetables") %>
      </div>
    </div>

    <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("Whole_Grain_Cracker_Whole_Grains_and_Fiber.jpg", :alt => "Picture of whole grains and fibers") %>
      </div>
    </div>

    <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("meat-products.jpg", :alt => "picture of a range of meats") %>
      </div>
    </div>

    <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("table-of-dairy-products.jpg", :alt => "picture of dairy products") %>
      </div>
    </div>
  </div>

 <% @ingredients.each do |ingredient| %>
      <h3>  <%= ingredient.name %></h3>
      <%= ingredient.description %>
      <%= ingredient.photo %>

      <p>Price: <%= humanized_money_with_symbol(ingredient.price) %>
        <%= ingredient.price_type %></p>

      <%= ingredient.price %><br />
      <%= ingredient.rating %><br />

      <%= ingredient.main_category %>
      <%= ingredient.category %><br />
      <%= ingredient.available_quantity %><br />
     <br />
      <%= ingredient.farm.farm_name %><br />
       <p> SKU: <%= ingredient.sku %></p>

      <p>$$$</p>

      <%= link_to "Link", ingredient_path(ingredient) %>

      <%= simple_form_for @order do |order| %>
        <%= order.input :order_quantity %>
        <%= order.input :ingredient_id, :as => :hidden, :input_html => { :value => ingredient.id }  %>
        <%= order.input :price_paid, :as => :hidden, :input_html => { :value => ingredient.price  }  %>
        <%= order.submit "add to basket", class: "btn btn-primary" %>
      <% end %>

    <hr>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
</div>
