      <div class="category-card">
        <%= cl_image_tag("Fruits_and_veg.jpg", :alt => "Picture of fruits and vegetables") %>
        <div class="middle">
          <div class="category-text">
            TO DO: Fruits button
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("Whole_Grain_Cracker_Whole_Grains_and_Fiber.jpg", :alt => "Picture of whole grains and fibers") %>
        <div class="middle">
          <div class="category-text">
            TO DO: Grains button
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("meat-products.jpg", :alt => "picture of a range of meats") %>
        <div class="middle">
          <div class="category-text">
            TO DO: Meat button
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 thin-padding" >
      <div class="category-card">
        <%= cl_image_tag("table-of-dairy-products.jpg", :alt => "picture of dairy products") %>
        <div class="middle">
          <div class="category-text">
            TO DO: Dairy button
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row filter">
      <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10" >
        <%= simple_form_for @order do |o| %>
        <%= o.input :order_quantity, label: false, input_html: { text: "TO DO: Add filter code" } %>
        <% end %>
      </div>

        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2" >

            <button class="btn btn-filter-submit" type="submit">Filter</button>

    </div>
  </div>


    <div class="cards-container">
      <div class="row" >


        <% @ingredients.each do |ingredient| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card-text">
              <%= link_to '#' do %>
                <%#= cl_image_path ingredient.photo %>
                <%#= link_to "", ingredient_path(ingredient), class: "card-link" %>
              <% end %>

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%=cl_image_path ingredient.photo%>');">

              <div class="card-category"><h2><%= ingredient.name %></h2>
              </div>

              <%# unless current_user.photo.nil? %>
               <!--  <div class="card-user"> -->
                <%#= cl_image_tag current_user.photo, height: 40, width: 40, crop: :fill %>
               <!--  </div> -->
              <%# end %>

                <%= link_to "", ingredient_path(ingredient), class: "card-link" %>
            </div><p><%#= ingredient.category %></p>


      </div>
    </div>
  <% end %>

<div id="map" style="width: 100%; height: 400px;" data-markers="<%= @markersto_json %>">

</div>
