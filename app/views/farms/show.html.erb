<div class="container">
  <div class="banner-farm" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    <div class="banner-content">
      <h1><%=@farm.farm_name%></h1>
      <p>A warm welcome from <%=@farm.farmers_name=%>.</p>
    </div>
  </div>

  <%= link_to "BACK TO INDEX", ingredients_path, class: "btn btn-farm" %>


  <%#= cl_image_tag @farm.farm_photo, height: 300, width: 400, crop: :fill %>

  <p>Here is some text about the farm: <%= @farm.description%></p>

  <p><%= "Here we find all the ingredients that the farm offers." %></p>

  <ul>
    <% @ingredients.each do |ingredient| %>
      <li>Name: <%= ingredient.name %>, Price: <%= ingredient.price %>, Rating: <%= ingredient.rating %> </li>
      <%= link_to "Link", ingredient_path(ingredient) %>
    <% end %>
  </ul>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>
</div>




