<%= form_tag ingredients_path, method: :get do %>
  <div class="form-inline form-space">
    <%= text_field_tag :query, params[:query], class: "form-control form-size", placeholder: "Find an ingredient" %>
    <label for="filter" > <!-- Filter on: --></label>
    <%= select_tag "filter", options_for_select([ "Filter on", "Rating", "Price" ], params[:filter]),  include_blank: false, class: "form-control font-small" %>
    <%= submit_tag "Search", class: "btn btn-farm-submit less-padding" %>
  </div><!--form inline-->
<% end %>
