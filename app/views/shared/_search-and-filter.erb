<%= form_tag ingredients_path, method: :get do %>
  <div class="form-inline">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an ingredient"
    %>
    <label for="filter" >Filter on:</label>
    <%= select_tag "filter", options_for_select([ "Rating", "Price" ], params[:filter]), include_blank: true %>
    <%= submit_tag "Search!" %>
  </div>
<% end %>

